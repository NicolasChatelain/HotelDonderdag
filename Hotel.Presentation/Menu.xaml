<Window x:Class="Hotel.Presentation.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel.Presentation"
        mc:Ignorable="d"
        Title="Menu" Height="720" Width="1280">
    <Grid Background="#2c2c2c">

        <StackPanel Width="300" Height="auto" VerticalAlignment="Center" Background="#202020"  >
            <Button Panel.ZIndex="20" Content="Customers" Margin="0 50 0 0" Width="175" Padding="10" Cursor="Hand" FontSize="15" Name="Customers" Click="Customers_Click" />
            <Button Content="Activities" Margin="0 15 0 15" Width="175" Padding="10" Cursor="Hand" FontSize="15" />
            <Button Content="Register for activities" Margin="0 0 0 50" Width="175" Padding="10" Cursor="Hand" FontSize="15" />
        </StackPanel>
    </Grid>
</Window>
