        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel.Presentation.Windows.Organizations___Activities.pages"
        mc:Ignorable="d"
        Title="Window1" Height="250" Width="350" WindowStartupLocation="CenterScreen">
