<UserControl x:Class="Hotel.Presentation.Windows.Registrations.pages.LoginScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hotel.Presentation.Windows.Registrations.pages"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid>
        <Label Content="Name:" Foreground="#f3f4f7" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-100 -100 0 0"/>
        <TextBox Width="150" Height="30" FontSize="20" Background="#f3f4f7" x:Name="NameInputBox" Margin="0 -50 0 0"/>

        <Label Content="Phone:" Foreground="#f3f4f7" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-100 0 0 0"/>
        <TextBox Width="150" Height="30" FontSize="20" Background="#f3f4f7" x:Name="PhoneInputBox" Margin="0 50 0 0"/>
        <Button Width="75" Height="30" Margin="0 150 0 0" Foreground="#212121" Content="Login" Cursor="Hand" x:Name="LoginBTN" Click="LoginBTN_Click"/>
    </Grid>
</UserControl>
