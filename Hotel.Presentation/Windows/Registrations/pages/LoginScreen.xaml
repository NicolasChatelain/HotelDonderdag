<UserControl x:Class="Hotel.Presentation.Windows.Registrations.pages.LoginScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hotel.Presentation.Windows.Registrations.pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label Content="Customer login:" Foreground="#f3f4f7" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-280 0 0 0" FontSize="16"/>
        <TextBox Width="150" Height="30" FontSize="20" Background="#f3f4f7" x:Name="loginTextBox"/>
        <Button Width="75" Height="30" Margin="0 0 -250 0" Foreground="#212121" Content="Login" Cursor="Hand" x:Name="LoginBTN" Click="LoginBTN_Click"/>
    </Grid>
</UserControl>
